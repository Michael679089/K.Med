<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="HardcodedText" >

        <TextView
            android:id="@+id/adminNurseEmailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <EditText
            android:id="@+id/adminNurseEmailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text=""
            android:hint="Nurse's email address"
            />

        <TextView
            android:id="@+id/adminNursePasswordTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <EditText
            android:id="@+id/adminNursePasswordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:text=""
            android:hint="Nurse's password"/>

        <TextView
            android:id="@+id/adminNurseFirstNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="firstName" />

        <EditText
            android:id="@+id/adminNurseFirstNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Doctor's firstname"
            android:inputType="text" />

        <TextView
            android:id="@+id/adminNurseLastNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lastName" />

        <EditText
            android:id="@+id/adminNurseLastNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Doctor's lastName"
            android:inputType="text" />

        <Button
            android:id="@+id/adminSubmitNurseBTN"
            style="@style/GreenButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="@null"
            android:text="Submit Nurse" />

        <Button
            android:id="@+id/adminCancelNurseBTN"
            style="@style/RedButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="36dp"
            android:text="Go Back"
            android:backgroundTint="@null"
            />

    </LinearLayout>
</ScrollView>
